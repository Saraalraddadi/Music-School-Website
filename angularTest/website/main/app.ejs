<h2>My Heroes</h2>
<ul class="heroes" *ngIf="heroes">
	<li *ngFor="let hero of heroes" 
		[class.selected]="hero === selectedHero" 
		(click)="onSelect(hero)">
			<span class="badge">{{hero.id}}</span>{{hero.name}}
			<button (click)="Delete(hero.id)">Delete</button>
	</li>
</ul>
<button (click)="ShowNewHeroEntry()">Add new Hero</button>
<div *ngIf="newHero">
	<h2>{{ newHero.name }} details</h2>
	Name: <input [(ngModel)]="newHero.name"/>
	<button (click)="AddNewHero()">Add!</button>
</div>
<div *ngIf="selectedHero">
  <h2>
    {{selectedHero.name | uppercase}} is my hero
  </h2>
  <button (click)="gotoDetail()">View Details</button>
</div>