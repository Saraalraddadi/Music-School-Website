<p *ngIf="error" class="errorMessage">{{error}}</p>
<form [hidden]="submitted" (ngSubmit)="Register()" #registrationForm="ngForm" method="POST">
	<fieldset id="accountinfo">
	    <legend><span>Account Details</span></legend>
	    <div class="row">
			<div class="col-sm-6">
				<label 	for="email">Email: </label>
				<input 	title="Must be a normal email: example@example.com" type="email" placeholder= "Email" id="email" name="email" #email="ngModel"
						[(ngModel)]="student.email" pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required/>
				<p class="errorMessage" [hidden]="(email.valid || email.untouched) && isValid.email">Invalid input. Must be a valid email format.</p>
			</div>
			<div class="col-sm-6">
				<label 	for="password">Password: </label>
				<input 	title="Must be at least 6 digits long." placeholder= "6 Character Password" type="password" id="password" name="password" #password="ngModel"
						[(ngModel)]="student.password" pattern="^.{6,}" required/>
				<p class="errorMessage" [hidden]="(password.valid || password.untouched) && isValid.password">Invalid input. Must be at least 6 characters long.</p>
			</div>
		</div>
	</fieldset>
	<fieldset id="personalinfo">
	    <legend><span>Personal Information</span></legend>
		<div class="row">
			<div class="col-sm-6">
				<label 	for="firstName">First Name: </label>
				<input 	type="text" placeholder= "First Name" id="firstName" name="firstName" #firstName="ngModel"
						[(ngModel)]="student.firstName" pattern="^[A-Za-z ]+$" required/>
				<p class="errorMessage" [hidden]="(firstName.valid || firstName.untouched) && isValid.firstName">Invalid input. Must only contain letters.</p>
			</div>
			<div class="col-sm-6">
				<label 	for="middleName">Middle Name: </label>
				<input 	type="text" id="middleName" placeholder= "Middle Name" name="middleName" #middleName="ngModel"
						[(ngModel)]="student.middleName" pattern="^[A-Za-z ]*$" />
				<p class="errorMessage" [hidden]="(middleName.valid || middleName.untouched) && isValid.middleName">Invalid input. Must only contain letters.</p>
			</div>
		</div>
	    <div class="row">
			<div class="col-sm-6">
				<label 	for="lastName">Last Name: </label>
				<input 	type="text" id="lastName" placeholder= "Last Name" name="lastName" #lastName="ngModel"
						[(ngModel)]="student.lastName" pattern="^[A-Za-z ]+$" required/>
				<p class="errorMessage" [hidden]="(lastName.valid || lastName.untouched) && isValid.lastName">Invalid input. Must only contain letters.</p>
			</div>
			<div class="col-sm-6">
				<label 	for="birthday">Date of Birth: </label>
				<input 	title="dd/mm/yyyy" type="text" id="birthday" class="datepicker" placeholder= "dd/mm/yyyy" name="birthday" #birthday="ngModel" [(ngModel)]="student.birthday" 
						pattern="^([0-2][0-9]|3[0-1])\/(0[1-9]|1[0-2])\/((19|20)[0-9]{2})$" 
						autocomplete="off" required/>
				<p class="errorMessage" [hidden]="(birthday.valid || birthday.untouched) && isValid.birthday">Invalid input. Must be a valid date in the format dd/mm/yyyy.</p>
			</div>
		</div>
	    <div class="row">
        	<div class="col-sm-6">
        		<label for="gender">Gender:</label>
	            <select id="gender" name="gender" #gender="ngModel" [(ngModel)]="student.gender" pattern="^Male$|^Female$" required>
						<option value="" disabled selected>Select Gender</option>
						<option value="Male">Male</option>
						<option value="Female">Female</option>
				</select>
				<p class="errorMessage" [hidden]="(gender.valid || gender.untouched) && isValid.gender">A Value must be selected.</p>
        	</div>
	    </div>
	</fieldset>
	<fieldset id="contactinfo">
	    <legend><span>Contact Information</span></legend>
	    <div class="row">
			<div class="col-sm-6">
				<label 	for="address">Address: </label>
				<input 	type="text" id="address" placeholder= "Number and Street Name" name="address" #address="ngModel"
						[(ngModel)]="student.address"
				pattern="^(\d)+ [A-Za-z ]+ [A-Za-z ]+$" required/>
				<p class="errorMessage" [hidden]="(address.valid || address.untouched) && isValid.address">Invalid input. Must be a valid address.</p>
			</div>
			<div class="col-sm-6">
				<label 	for="phoneNumber">Phone Number: </label>
				<input 	id="phoneNumber" placeholder= "Home or Mobile" name="phoneNumber" #phoneNumber="ngModel"
						[(ngModel)]="student.phoneNumber" pattern="^\d{8}$|^04\d{8}$" required/>
				<p class="errorMessage" [hidden]="(phoneNumber.valid || phoneNumber.untouched) && isValid.phoneNumber">Invalid input. Must be a valid mobile or home number (without area codes).</p>
			</div>
		</div>
		<div class="buttonContainer col-sm-12">
			<button [disabled]="!registrationForm.form.valid" type="Submit">Register!</button>
		</div>
	</fieldset>
</form>
<div [hidden]="!submitted">
	<p>Attempting to Register your new account...</p>
</div>